@using QuizApplication.ViewModels
@model List<AssignRoleViewModel>

@{
    ViewData["Title"] = "Assign Role";
}

<h3>Assign Roles</h3>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Current Role</th>
            <th>Change Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.CurrentRole</td>
                <td>
                    <form method="post" asp-action="AssignRole">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <select name="role" class="form-select d-inline w-auto me-2">
                            <option value="User" selected="@(user.CurrentRole == "User")">User</option>
                            <option value="Admin" selected="@(user.CurrentRole == "Admin")">Admin</option>
                        </select>
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
