@using Microsoft.AspNetCore.Identity
@using QuizApplication.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav mx-1 gap-2">
  
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-decoration-underline text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class=" btn btn-danger text-white fw-bold">Logout</button>
        </form>
    </li>
}
else
{
    

    <li class="nav-item">
            <a class="btn btn-primary text-white fw-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-success text-white fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    
}
</ul>
